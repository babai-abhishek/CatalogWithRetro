<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new_book"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.abhishek.catalogwithretro.activity.book.AddNewBookActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter name of book"
        android:layout_margin="5dp"
        android:id="@+id/et_new_book_name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:layout_height="wrap_content"
        android:hint="Enter the language of the book"
        android:id="@+id/et_new_book_language"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:hint="Enter date of publish"
        android:clickable="true"
        android:focusable="false"
        android:id="@+id/et_new_book_publishDate"
        android:layout_width="match_parent" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:inputType="number"
        android:hint="Enter no of pages in book"
        android:id="@+id/et_new_book_pages"/>
    <TextView
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#E0E0E0"
        android:id="@+id/tv_select_genre_type"
        android:textAlignment="center"
        android:textSize="15sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#E0E0E0"
        android:textSize="15sp"
        android:id="@+id/tv_select_author_name"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btn_save_new_book"/>

</LinearLayout>
